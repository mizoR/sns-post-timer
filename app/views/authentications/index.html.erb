<h1>Authentications#index</h1>
<table class='table'>
  <tr>
    <th>Icon</th>
    <th>Service type</th>
    <th>UID</th>
    <th>Expires at</th>
    <th>Destroy</th>
  </tr>
  <% current_user.authentications.each do |authentication| %>
    <tr>
      <td><%= image_tag(authentication.profile_icon_url, size: '48x48') %></td>
      <td><%= authentication.service_type %></td>
      <td><%= authentication.uid %></td>
      <td><%= authentication.expires_at %></td>
      <td><%= link_to(raw("<i class='icon-remove'></i>"), authentication_path(id: authentication), method: :delete) %></td>
    </tr>
  <% end %>
</table>
<p>
<%= link_to 'Create Facebook Connection', authentications_path(service_type: :facebook), method: :post, class: 'btn btn-primary' %>
<%= link_to 'Create Twitter Connection', authentications_path(service_type: :twitter), method: :post, class: 'btn btn-primary' %>
</p>
<p><%= link_to 'Back to Dashboard', dashboard_path, class: 'btn' %></p>
